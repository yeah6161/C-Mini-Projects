#include <stdio.h>

int main() {
    double a, b;
    char op;

    printf("a: ");
    scanf("%lf", &a);

    printf("b: ");
    scanf("%lf", &b);

    printf("Operator (+ - * /): ");
    scanf(" %c", &op);

    double r;

    switch(op) {
        case '+': r = a + b; break;
        case '-': r = a - b; break;
        case '*': r = a * b; break;
        case '/': r = b != 0 ? a / b : 0; break;
        default:
            printf("Invalid operator\n");
            return 0;
    }

    printf("Result: %.2lf\n", r);
    return 0;
}
